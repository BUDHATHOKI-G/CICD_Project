{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": false,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Compatibility Fixes */
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  }
}
